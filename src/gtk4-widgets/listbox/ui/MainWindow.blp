using Gtk 4.0;

template ExampleWindow: ApplicationWindow {
  title: "Python e GTK 4: PyGObject Gtk.ListBox() ui file.";
  default-width: 683;
  default-height: 384;

  [titlebar]
  HeaderBar header_bar {
    [end]
    MenuButton {
      icon-name: "open-menu-symbolic";
      menu-model: primary_menu;
    }
  }

  Box {
    orientation: vertical;
    homogeneous: true;
    margin-top: 12;
    margin-end: 12;
    margin-bottom: 12;
    margin-start: 12;
    spacing: 12;

    ListBox {
      selection-mode: single;
      show-separators: true;
      vexpand: true;

      styles [
        "boxed-list",
      ]

      ListBoxRow {
        Label {
          label: "Linha 01";
        }
      }

      ListBoxRow {
        Label {
          label: "Linha 02";
        }
      }

      ListBoxRow {
        Label {
          label: "Linha 03";
        }
      }
    }
  }
}

menu primary_menu {
  section {
    item {
      label: _("PreferÃªncias");
      action: "app.preferences";
    }
  }
}
