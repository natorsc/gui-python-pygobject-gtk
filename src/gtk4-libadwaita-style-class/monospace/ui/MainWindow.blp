using Gtk 4.0;

template ExampleWindow : ApplicationWindow {
  title: "Python e GTK 4: PyGObject libadwaita style class monospace ui file";
  default-width: 683;
  default-height: 384;

  [titlebar]
  HeaderBar header_bar {
    [end]
    MenuButton {
      icon-name: "open-menu-symbolic";
      menu-model: primary_menu;
    }
  }

  Box {
    orientation: vertical;
    margin-top: 12;
    margin-end: 12;
    margin-bottom: 12;
    margin-start: 12;
    spacing: 12;

    Label {
      label: "Label normal";
    }

    Label {
      label: "Label com a classe monospace";

      styles [
        "monospace",
      ]
    }
  }
}

menu primary_menu {
  section {
    item {
      label: _("PreferÃªncias");
      action: "app.preferences";
    }
  }
}
