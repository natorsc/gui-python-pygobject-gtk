using Gtk 4.0;
using Adw 1;

template ExampleWindow : ApplicationWindow {
  title: "Python e GTK 4: PyGObject Gtk.ListBox() Adw.EntryRow() ui file";
  default-width: 683;
  default-height: 384;

  [titlebar]
  HeaderBar header_bar {
    [end]
    MenuButton {
      icon-name: "open-menu-symbolic";
      menu-model: primary_menu;
    }
  }

  Box {
    orientation: vertical;
    margin-top: 12;
    margin-end: 12;
    margin-bottom: 12;
    margin-start: 12;
    spacing: 12;

    ListBox {
      selection-mode: none;

      styles [
        "boxed-list",
      ]

      Adw.EntryRow {
        title: "Title 01";
        activates-default: true;
        show-apply-button: true;
        apply => on_apply_button_pressed();
      }

      Adw.EntryRow {
        title: "Title 02";
        activates-default: true;
        show-apply-button: true;
        apply => on_apply_button_pressed();
      }

      Adw.EntryRow {
        title: "Title 03";
        activates-default: true;
        show-apply-button: true;
        apply => on_apply_button_pressed();
      }

      Adw.EntryRow {
        title: "Title 04";
        activates-default: true;
        show-apply-button: true;
        apply => on_apply_button_pressed();
      }

      Adw.EntryRow {
        title: "Title 05";
        activates-default: true;
        show-apply-button: true;
        apply => on_apply_button_pressed();
      }
    }
  }
}

