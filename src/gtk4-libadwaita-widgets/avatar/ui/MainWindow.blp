using Gtk 4.0;
using Adw 1;

template ExampleWindow : ApplicationWindow {
  title: "Python e GTK 4: PyGObject libadwaita Adw.Avatar() ui file";
  default-width: 683;
  default-height: 384;

  [titlebar]
  HeaderBar header_bar {
    [end]
    MenuButton {
      icon-name: "open-menu-symbolic";
      menu-model: primary_menu;
    }
  }

  Box {
    orientation: horizontal;
    homogeneous: true;
    margin-top: 12;
    margin-end: 12;
    margin-bottom: 12;
    margin-start: 12;
    spacing: 12;

    Adw.Avatar {
      size: 100;
      text: "Renato Cruz";
      show-initials: false;
    }

    Adw.Avatar {
      size: 100;
      text: "Renato Cruz";
      show-initials: true;
    }

    Adw.Avatar {
      size: 100;
      text: "Renato Cruz";
      show-initials: false;
      icon-name: "contact-new-symbolic";
    }
  }
}

menu primary_menu {
  section {
    item {
      label: _("PreferÃªncias");
      action: "app.preferences";
    }
  }
}
